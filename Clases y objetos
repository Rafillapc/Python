class Juguete:
    _encendido = True

    def enciende(self):
        print("Enciendo el aparato")
        self._encendido=True

    def apaga(self):
        print("Apago el aparato")
        self._encendido=False

    def isEncendido(self):
        return self._encendido

class Potato(Juguete):
    def quitarOreja(self):
        pass

    def ponerOreja(self):
        pass


