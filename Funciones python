def miFuncion(nombre):
    print("Hola", nombre)

def matematicas(a, b):
    def suma(a, b):
        print(a+b)

    def resta(a, b):
        print(a-b)

    suma(a, b)
    resta(a, b)

matematicas(5, 3)

def miFuncion(nombre="Rafi"):
    hoyHace = 6.0
    print("Hola", nombre, "la temperatura es de", hoyHace)

