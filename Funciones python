def suma(a, b=5, c=1):
    print(a +b +c)

suma(3)
suma(1, 1, 1)

anonima = lambda nombre, nombre2: print("Hola", nombre, "adios", nombre2)
anonima("Pepe", "Juan")

def sumatoria(x):
    return x+x
